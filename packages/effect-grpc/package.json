{
  "name": "@dr_nikson/effect-grpc",
  "version": "0.1.0",
  "description": "gRPC and Protobuf capabilities for the Effect ecosystem",
  "private": false,
  "type": "module",
  "packageManager": "pnpm@10.16.1",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dr_nikson/effect-grpc.git",
    "directory": "packages/effect-grpc"
  },
  "license": "MIT",
  "author": "dr_nikson",
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "protoc-gen-effect": "./bin/protoc-gen-effect"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./protoc-gen-effect": {
      "import": {
        "types": "./dist/protocGenPlugin.d.ts",
        "default": "./dist/protocGenPlugin.js"
      },
      "require": {
        "types": "./dist/protocGenPlugin.d.ts",
        "default": "./dist/protocGenPlugin.js"
      }
    }
  },
  "scripts": {
    "compile": "tsc --build tsconfig.json",
    "clean": "rm -rf ./dist ./tsconfig.tsbuildinfo",
    "generate:proto": "pnpm buf generate",
    "build": "pnpm run clean && pnpm run compile",
    "test": "echo \"No test specified\" && exit 0",
    "test:types": "vitest --typecheck.only --watch=false --config vitest.config.ts"
  },
  "dependencies": {
    "@bufbuild/protobuf": "catalog:",
    "@bufbuild/protoplugin": "catalog:",
    "@connectrpc/connect": "catalog:",
    "@connectrpc/connect-node": "catalog:"
  },
  "peerDependencies": {
    "@bufbuild/protobuf": "catalog:peer",
    "@connectrpc/connect": "catalog:peer",
    "effect": "catalog:peer"
  },
  "devDependencies": {
    "@bufbuild/buf": "catalog:",
    "@bufbuild/protoc-gen-es": "catalog:",
    "@effect/platform": "catalog:",
    "@effect/platform-node": "catalog:",
    "effect": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}